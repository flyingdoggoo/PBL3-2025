@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>@ViewData["Title"]</h1>
<hr />

@await Html.PartialAsync("_StatusMessagePartial")

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <div class="col">
        <div class="card h-100 shadow-sm border-primary">
            <div class="card-header bg-primary text-white"><i class="fas fa-plane-departure me-2"></i>Quản lý Chuyến bay</div>
            <div class="card-body d-flex flex-column">
                <p class="card-text">Xem, thêm, sửa, xóa thông tin các chuyến bay trong hệ thống.</p>
                <div class="mt-auto">
                    <a asp-controller="Flights" asp-action="Index" class="btn btn-outline-primary stretched-link">
                        <i class="fas fa-arrow-right me-1"></i> Đi đến
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 shadow-sm border-success">
            <div class="card-header bg-success text-white"><i class="fas fa-users-cog me-2"></i>Quản lý Nhân viên</div>
            <div class="card-body d-flex flex-column">
                <p class="card-text">Quản lý tài khoản, thông tin và phân quyền cho nhân viên.</p>
                <div class="mt-auto">
                    <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-success stretched-link">
                        <i class="fas fa-arrow-right me-1"></i> Đi đến
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 shadow-sm border-warning">
            <div class="card-header bg-warning text-dark"><i class="fas fa-ticket-alt me-2"></i>Quản lý Đặt vé</div>
            <div class="card-body d-flex flex-column">
                <p class="card-text">Xem và quản lý các vé máy bay đã được hành khách đặt.</p>
                <div class="mt-auto">
                    <a asp-controller="Bookings" asp-action="Index" class="btn btn-outline-warning stretched-link">
                        <i class="fas fa-arrow-right me-1"></i> Đi đến
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 shadow-sm border-info">
            <div class="card-header bg-info text-white"><i class="fas fa-chart-line me-2"></i>Thống kê & Báo cáo</div>
            <div class="card-body d-flex flex-column">
                <p class="card-text">Xem báo cáo doanh thu, số lượng vé và các chỉ số quan trọng khác.</p>
                <div class="mt-auto">
                    <a asp-controller="Statistics" asp-action="Revenue" class="btn btn-outline-info stretched-link">
                        <i class="fas fa-arrow-right me-1"></i> Đi đến
                    </a>
                </div>
            </div>
        </div>
    </div>
    @* Thêm các card khác cho chức năng khác nếu cần *@
</div>