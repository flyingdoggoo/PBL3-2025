@{
    ViewData["Title"] = "Employee Dashboard";
}

<h1>@ViewData["Title"]</h1>
<hr />
@await Html.PartialAsync("_StatusMessagePartial")

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <div class="col">
        <div class="card h-100 shadow-sm border-success">
            <div class="card-header bg-success text-white"><i class="fas fa-users me-2"></i>Quản lý Hành khách</div>
            <div class="card-body d-flex flex-column">
                <p class="card-text">Xem, sửa thông tin và quản lý tài khoản hành khách.</p>
                <div class="mt-auto">
                    <a asp-controller="Passengers" asp-action="Index" class="btn btn-outline-success stretched-link">
                        <i class="fas fa-arrow-right me-1"></i> Đi đến
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm border-warning">
            <div class="card-header bg-warning text-dark"><i class="fas fa-ticket-alt me-2"></i>Quản lý Đặt vé</div>
            <div class="card-body d-flex flex-column">
                <p class="card-text">Xem và quản lý các vé máy bay đã được đặt.</p>
                <div class="mt-auto">
                    <a asp-controller="Bookings" asp-action="Index" class="btn btn-outline-warning stretched-link">
                        <i class="fas fa-arrow-right me-1"></i> Đi đến
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm border-danger">
            <div class="card-header bg-danger text-white"><i class="fas fa-user-clock me-2"></i>Yêu cầu Hủy vé</div>
            <div class="card-body d-flex flex-column">
                <p class="card-text">Xem và xử lý các yêu cầu hủy vé từ khách hàng.</p>
                <div class="mt-auto">
                    <a asp-controller="Bookings" asp-action="PendingCancellations" class="btn btn-outline-danger stretched-link">
                        <i class="fas fa-arrow-right me-1"></i> Đi đến
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm border-info">
            <div class="card-header bg-info text-white"><i class="fas fa-chart-line me-2"></i>Thống kê</div>
            <div class="card-body d-flex flex-column">
                <p class="card-text">Xem báo cáo doanh thu và các chỉ số khác.</p>
                <div class="mt-auto">
                    <a asp-controller="Statistics" asp-action="Revenue" class="btn btn-outline-info stretched-link">
                        <i class="fas fa-arrow-right me-1"></i> Đi đến
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>