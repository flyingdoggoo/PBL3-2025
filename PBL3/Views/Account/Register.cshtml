@using PBL3.Models.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Register" method="post">
            <h4>Create a new account.</h4>
            <hr />

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="FullName" class="form-control" autocomplete="name" aria-required="true" placeholder="Your full name" />
                <label asp-for="FullName">Full Name</label>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Age" class="form-control" aria-required="true" />
                <label asp-for="Age">Age</label>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Address" class="form-control" />
                <label asp-for="Address">Address</label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Create a password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm your password" />
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>



            <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>

            <div class="mt-3 text-center">
                <a asp-action="Login">Already have an account? Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
  
}