@{
    if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            Layout = "_AdminLayout";
        }
        else if (User.IsInRole("Employee"))
        {
            Layout = "_EmployeeLayout";
        }
        else
        {
            Layout = "_Layout";
        }
    }
    else
    {
        Layout = "_Layout";
    }
}