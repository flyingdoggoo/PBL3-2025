@model IEnumerable<PBL3.Models.AppUser>
@{
    ViewData["Title"] = "Quản lý Nhân viên";
}

<h1>@ViewData["Title"]</h1>
<hr />

@await Html.PartialAsync("_StatusMessagePartial")

<p>
    <a asp-action="Create" class="btn btn-success mb-3"><i class="fas fa-user-plus me-1"></i> Thêm nhân viên mới</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                <th>@Html.DisplayNameFor(model => model.First().Age)</th>
                <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                @*<th>Ngày thêm</th>*@ @* Thêm nếu cần hiển thị AddedDate *@
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Age)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    @*<td>@(((PBL3.Models.Employee)item).AddedDate.ToString("dd/MM/yyyy"))</td>*@ @* Cần ép kiểu nếu hiển thị AddedDate *@
                    <td>
                        <div class="btn-group" role="group">
                            @* Bỏ btn-group-sm *@
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit me-1"></i> Sửa</a> @* Thêm text, giữ btn-sm *@
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="fas fa-info-circle me-1"></i> Chi tiết</a> @* Thêm text, giữ btn-sm *@
                            <a asp-action="ResetPassword" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="fas fa-key me-1"></i> Reset MK</a> @* Thêm text, giữ btn-sm *@
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-user-times me-1"></i> Xóa</a> @* Thêm text, giữ btn-sm *@
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>