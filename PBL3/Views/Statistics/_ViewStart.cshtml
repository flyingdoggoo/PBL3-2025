@* File: Views/Bookings/_ViewStart.cshtml *@
@{
    if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            Layout = "_AdminLayout";
        }
        else if (User.IsInRole("Employee"))
        {
            Layout = "_EmployeeLayout";
        }
        else
        {
            Layout = "_Layout"; // Layout mặc định cho các vai trò khác hoặc khách
        }
    }
    else
    {
        Layout = "_Layout"; // Layout mặc định khi chưa đăng nhập
    }
}