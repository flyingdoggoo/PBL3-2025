@model PBL3.Models.ViewModels.ResetPasswordAdminViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu Hành khách";
}

<h4>@ViewData["Title"]</h4>
<p>Đặt lại mật khẩu cho hành khách: <strong>@Model.Email</strong></p>
<hr />
@await Html.PartialAsync("_StatusMessagePartial")

<div class="row">
    <div class="col-md-6">
        <form asp-action="ResetPassword">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Email" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" type="password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Đặt lại mật khẩu</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}