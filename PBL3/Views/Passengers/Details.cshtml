@model PBL3.Models.AppUser
@{
    ViewData["Title"] = "Chi tiết Hành khách";
    var passengerModel = Model as Passenger;
}

<h4>@ViewData["Title"]: @Model.FullName</h4>
<hr />
@await Html.PartialAsync("_StatusMessagePartial")

<div>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Age)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Age)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Address)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

        @if (passengerModel != null)
        {
            <dt class="col-sm-3">@Html.DisplayNameFor(model => passengerModel.PassportNumber)</dt>
            <dd class="col-sm-9">@(passengerModel.PassportNumber ?? "N/A")</dd>
        }

        <dt class="col-sm-3">Email xác nhận?</dt>
        <dd class="col-sm-9">@(Model.EmailConfirmed ? "Đã xác nhận" : "Chưa xác nhận")</dd>
    </dl>
</div>
<div class="mt-3">
    @if (User.IsInRole("Employee"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Chỉnh sửa</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>